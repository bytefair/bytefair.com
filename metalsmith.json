{
  "source": "src/content",
  "destination": "dist",
  "clean": false,
  "plugins": {
    "metalsmith-drafts": true,
    "metalsmith-markdownit": {
      "typographer": true,
      "html": true
    },
    "metalsmith-permalinks": {
      "linksets": [{
        "match": { "collection": "articles" },
        "pattern": ":title"
      },{
        "match": { "collection": "projects" },
        "pattern": ":title"
      }]
    },
    "metalsmith-collections": {
      "articles": {
        "sortBy": "date",
        "reverse": true
      },
      "projects": {
        "sortBy": "title"
      }
    },
    "metalsmith-layouts": {
      "directory": "src/templates/layouts",
      "default": "default.hbs",
      "engine": "handlebars",
      "partials": "src/templates/partials",
      "rename": true
    },
    "metalsmith-ignore": [
      "**/*.css",
      "**/*.js"
    ]
  }
}
