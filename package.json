{
  "name": "bytefair",
  "version": "3.0.0",
  "description": "www.bytefair.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:bytefair/bytefair.com.git"
  },
  "author": "Paul Graham <paul@bytefair.com>",
  "license": "GPL-3.0",
  "homepage": "https://www.bytefair.com",
  "devDependencies": {
    "babel-preset-es2015": "latest",
    "babelify": "latest",
    "browser-sync": "latest",
    "browserify": "latest",
    "copyfiles": "^0.2.1",
    "cssnano": "latest",
    "handlebars": "^4.0.5",
    "imagemin-cli": "^2.1.0",
    "metalsmith": "~2",
    "metalsmith-ignore": "^0.1.2",
    "metalsmith-layouts": "latest",
    "metalsmith-markdownit": "latest",
    "metalsmith-permalinks": "latest",
    "nodemon": "latest",
    "normalize.css": "~4",
    "npm-run-all": "^2.1.1",
    "parallelshell": "latest",
    "postcss-cli": "latest",
    "postcss-cssnext": "latest",
    "postcss-em-media-query": "^1.0.1",
    "postcss-import": "latest",
    "postcss-nesting": "^2.3.1",
    "postcss-pxtorem": "^3.3.1",
    "sanitize.css": "^3.3.0",
    "snazzy": "^4.0.0",
    "standard": "^7.1.1",
    "stylelint": "^6.5.1",
    "stylelint-config-standard": "^8.0.0",
    "uglify-js": "latest",
    "watchify": "latest"
  },
  "scripts": {
    "js:compile": "browserify src/scripts/entry.js --debug --verbose --transform [ babelify --presets [ es2015 ] ] --outfile dist/bundle.js",
    "js:lint": "standard --verbose | snazzy",
    "js:min": "uglifyjs dist/bundle.js --compress --mangle --output dist/bundle.js",
    "styles:compile": "postcss --use postcss-import --use postcss-nesting --use postcss-cssnext --use postcss-pxtorem --use postcss-em-media-query --map --config postcss.json --output dist/bundle.css src/styles/entry.css",
    "styles:lint": "stylelint styles/**/*.css",
    "styles:min": "postcss --use cssnano --replace dist/bundle.css",
    "serve": "browser-sync start --server --serveStatic dist --files '**/*'",
    "templates:compile": "metalsmith",
    "watch:js": "watchify src/scripts/entry.js --debug --verbose --transform [ babelify --presets [ es2015 ] ] --outfile dist/bundle.js",
    "watch:styles": "nodemon --watch src/styles --ext css --exec 'npm run styles:compile'",
    "watch:templates": "nodemon --watch src/templates --watch src/content --exec 'npm run templates:compile'",
    "watch": "parallelshell 'npm run watch:js' 'npm run watch:styles' 'npm run serve'",
    "build:dev": "npm-run-all --parallel js:compile styles:compile templates:compile",
    "build:prod": "npm-run-all --parallel js:compile styles:compile templates:compile --sequential styles:min js:min",
    "start": "npm run watch"
  },
  "standard": {
    "ignore": [
      "scripts/bundle.js",
      "node_modules",
      "dist"
    ],
    "parser": "babel-eslint",
    "globals": []
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "configBaseDir": "src/styles"
  }
}
