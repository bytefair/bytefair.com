{
  "name": "bytefair",
  "version": "3.0.0",
  "description": "www.bytefair.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:bytefair/bytefair.com.git"
  },
  "author": "Paul Graham <paul@bytefair.com>",
  "license": "GPL-3.0",
  "homepage": "https://www.bytefair.com",
  "devDependencies": {
    "babel-preset-es2015": "latest",
    "babelify": "latest",
    "browser-sync": "latest",
    "browserify": "latest",
    "copyfiles": "latest",
    "cssnano": "latest",
    "handlebars": "latest",
    "imagemin-cli": "latest",
    "metalsmith": "latest",
    "metalsmith-collections": "latest",
    "metalsmith-drafts": "latest",
    "metalsmith-ignore": "latest",
    "metalsmith-layouts": "latest",
    "metalsmith-markdownit": "latest",
    "metalsmith-permalinks": "latest",
    "nodemon": "latest",
    "normalize.css": "latest",
    "npm-run-all": "latest",
    "parallelshell": "latest",
    "postcss-cli": "latest",
    "postcss-cssnext": "latest",
    "postcss-em-media-query": "latest",
    "postcss-import": "latest",
    "postcss-nesting": "latest",
    "postcss-pxtorem": "latest",
    "sanitize.css": "latest",
    "snazzy": "latest",
    "standard": "latest",
    "stylelint": "latest",
    "stylelint-config-standard": "latest",
    "uglify-js": "latest",
    "watchify": "latest"
  },
  "scripts": {
    "images:compress": "imagemin images/**/* --out-dir=dist/images",
    "js:compile": "browserify src/scripts/entry.js --debug --verbose --transform [ babelify --presets [ es2015 ] ] --outfile dist/bundle.js",
    "js:lint": "standard --verbose | snazzy",
    "js:min": "uglifyjs dist/bundle.js --compress --mangle --output dist/bundle.js",
    "styles:compile": "postcss --use postcss-import --use postcss-nesting --use postcss-cssnext --use postcss-pxtorem --use postcss-em-media-query --map --config postcss.json --output dist/bundle.css src/styles/entry.css",
    "styles:lint": "stylelint styles/**/*.css",
    "styles:min": "postcss --use cssnano --replace dist/bundle.css",
    "serve": "browser-sync start --server --serveStatic dist --files '**/*'",
    "static": "copyfiles src/static/**/* dist",
    "templates:compile": "metalsmith",
    "watch:js": "watchify src/scripts/entry.js --debug --verbose --transform [ babelify --presets [ es2015 ] ] --outfile dist/bundle.js",
    "watch:images": "nodemon --watch src/images --ext jpg,gif,png,svg --exec 'npm run images:compress'",
    "watch:static": "nodemon --watch src/static --ext * --exec 'npm run static'",
    "watch:styles": "nodemon --watch src/styles --ext css --exec 'npm run styles:compile'",
    "watch:templates": "nodemon --watch src/templates --watch src/content --ext hbs,md --exec 'npm run templates:compile'",
    "watch": "parallelshell 'npm run watch:js' 'npm run watch:styles' 'npm run watch:templates' 'npm run watch:images' 'npm run watch:static' 'npm run serve'",
    "build:dev": "npm-run-all --parallel js:compile styles:compile templates:compile images:compress static",
    "build:prod": "npm-run-all --parallel js:compile styles:compile templates:compile images:compress static --sequential styles:min js:min",
    "start": "npm run watch"
  },
  "standard": {
    "ignore": [
      "scripts/bundle.js",
      "node_modules",
      "dist"
    ],
    "parser": "babel-eslint",
    "globals": []
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "configBaseDir": "src/styles"
  }
}
